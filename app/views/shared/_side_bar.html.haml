.side-bar
  .side-bar__top
    .side-bar__top__box
      .side-bar__top__box__name
        = current_user.name
      .side-bar__top__box__icon
        .side-bar__top__box__icon__1
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
        .side-bar__top__box__icon__2
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
  .side-bar__list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .side-bar__list__box        
          .side-bar__list__box__group
            = group.name
          .side-bar__list__box__text
            まだメッセージはありません。
